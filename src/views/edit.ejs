<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('partials/head.ejs') %>
</head>
<body>
    <h1>
        <%= title %>
    </h1>
    <%- include('partials/navbar.ejs') %>

    <form action="/edit/<%= user._id %>" method="POST">
        <div>
            <label>Nome</label>
            <input type="text" name="name" placeholder="Digite o seu nome" value="<%= user.name %>">
        </div>
        <div>
            <label>Idade</label>
            <input type="text" name="age" placeholder="Digite o sua Idade" value="<%= user.age %>">
        </div>
        <div>
            <label>Email</label>
            <input type="text" name="email" placeholder="Digite o seu Email" value="<%= user.email %>">
        </div>
        
        <button type="submit">Editar</button>
    </form>

    <% if (typeof message !== 'undefined') { %>
        <%= message %>
     
    <% } %>


    <%- include('partials/foot.ejs') %>
    
</body>
</html>